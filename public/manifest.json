{
  "name": "PawCare Companion",
  "short_name": "PawCare",
  "id": "pawcare-companion-v1",
  "description": "Your complete pet care management solution - Track health records, medications, grooming schedules and more for your beloved pets",
  "start_url": "https://pawcare.app/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "background_color": "#8B5CF6",
  "theme_color": "#8B5CF6",
  "orientation": "portrait",
  "categories": ["pets", "health", "lifestyle"],
  "lang": "en-US",
  "dir": "ltr",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+pawcare",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://pawcare.app",
      "id": "pawcare-companion-v1"
    }
  ],
  "scope_extensions": [
    {
      "origin": "https://pawcare.app"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "window_controls_overlay": {
    "color": "#8B5CF6"
  },
  "icons": [
    {
      "src": "https://pawcare.app/icons/maskable_icon_x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://pawcare.app/icons/maskable_icon_x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://pawcare.app/icons/maskable_icon_x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://pawcare.app/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://pawcare.app/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://pawcare.app/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
